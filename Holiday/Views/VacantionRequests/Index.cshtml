@model IEnumerable<Holiday.Models.VacantionRequest>

@{
    ViewData["Title"] = "Index";
}


<style>
    body {
                background-color:darkgrey;
        margin: 0;
    }
</style>

<p>
    <a asp-action="Create">Create Request</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cause)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoOfDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cause)
                </td>
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.VacantionRequestId">Edit</a> |*@
                    <a asp-action="Details" asp-route-id="@item.VacantionRequestId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.VacantionRequestId">Cancel</a>
                </td>
            </tr>
        }
    </tbody>
</table>
